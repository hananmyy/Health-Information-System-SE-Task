<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.min.css"
    />
    <title>Doctor Registration Page</title>
  </head>
  <body class="flex flex-col min-h-screen pt-8">

    <%- include('layouts/header'); -%>
    
  
    <main class="flex-grow">

    <% if (typeof successMessage === 'string' || (errors && errors.length > 0)) { %>
    <div id="flash-messages" class="fixed top-0 left-0 right-0 mt-4 mx-auto w-11/12 z-50">
      <% if (typeof successMessage === 'string') { %>
      <div class="flash-success bg-teal-500 text-white text-center py-2 mb-4">
        <%= successMessage %>
      </div>
      <% } %>
      <% if (errors && errors.length > 0) { %>
      <div class="flash-error bg-red-500 text-white text-center py-2 mb-4">
        <% errors.forEach(function(error) { %>
        <p><%= error %></p>
        <% }); %>
      </div>
      <% } %>
    </div>
    <% } %>


    <form action="/doctor/register" method="POST" class="">
      <div class="flex justify-center items-center h-screen">
        <div class="w-96 p-6 shadow-lg bg-slate-200 rounded-md">
          <h1 class="text-3xl md:text-4xl block text-center font-Lobster font-semibold">
            <i class="fa-solid fa-user pr-2"></i>Register as a Doctor
          </h1>
          <hr class="mt-3" />
          <div class="mt-3">
            <label for="name" class="block text-base mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Full Name..."
            />
          </div>
          <div class="mt-3">
            <label for="email" class="block text-base mb-2"
              >Email Address</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Email Address..."
            />
          </div>
          <div class="mt-3">
            <label for="password" class="block text-base mb-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Password..."
            />
          </div>
          <div class="mt-3">
            <label for="confirmPassword" class="block text-base mb-2"
              >Confirm Password</label
            >
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Confirm Your Password..."
            />
          </div>
          <div class="mt-3">
            <label for="phoneNumber" class="block text-base mb-2"
              >Phone Number</label
            >
            <input
              type="tel"
              id="phoneNumber"
              name="phoneNumber"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Phone Number..."
            />
          </div>
          <div class="mt-3">
            <label for="location" class="block text-base mb-2">Speciality</label>
            <input
              type="text"
              id="speciality"
              name="speciality"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Speciality..."
            />
          </div>
          <div class="mt-5">
            <button
              type="submit"
              class="border-2 border-slate-700 bg-slate-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-Poppins font-semibold"
            >
              Register
            </button>
          </div>
        </div>
      </div>
    </form>
    </main>
    <%- include('layouts/footer'); -%>
    <script src="/js/scripts.js"></script>
  </body>
</html>
