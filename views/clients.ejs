<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/output.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.min.css"
    />
    <title>Clients List</title>
</head>
<<body class="flex flex-col min-h-screen">

    
    <%- include('layouts/header'); -%>
  
    <main class="flex-grow mb-15">
    <div class="container mx-auto mt-20 p-6 bg-white shadow-lg rounded-lg">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-semibold text-gray-800 mb-6 text-center font-Lobster">Clients List</h2>
            <input type="text" id="searchInput" placeholder="Search Clients..." class="border px-3 py-2 mb-4">
        </div>
        <% if (clients.length > 0) { %>
            <table class="w-full border-collapse border border-gray-300 rounded-lg">
                <thead>
                    <tr class="bg-slate-700 text-white">
                        <th class="p-3 text-left">Name</th>
                        <th class="p-3 text-left">DOB</th>
                        <th class="p-3 text-left">Email</th>
                        <th class="p-3 text-left">Contact</th>
                        <th class="p-3 text-left">Gender</th>
                        <th class="p-3 text-left">Profile</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.forEach(client => { %>
                        <tr class="border-t border-gray-200 hover:bg-gray-50 transition">
                            <td class="p-3"><%= client.name %></td>
                            <td class="p-3"><%= client.dob ? client.dob.toDateString() : "N/A" %></td>
                            <td class="p-3"><%= client.email %></td>
                            <td class="p-3"><%= client.contact %></td>
                            <td class="p-3"><%= client.gender %></td>
                            <td class="p-3">
                                <a href="/client/<%= client.id %>" class="text-blue-600 font-medium hover:underline">
                                    View Profile
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-gray-500 text-center mt-6">No clients found.</p>
        <% } %>
    </div>
    <div class="flex justify-center items-center mt-10">
        <form action="/doctorProfile" method="GET">
            <button class="gap-4 border-2 border-slate-200 bg-slate-700 text-white px-6 py-4 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-semibold">Back to Your Profile</button>
          </form>
    </div>
    </main>

    
    <%- include('layouts/footer'); -%>

    <script src="/js/script.js"></script>
</body>
</html>