<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/output.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.min.css" />
  <title>Contact Us</title>
</head>
<body class="flex flex-col min-h-screen">

  <%- include('layouts/header'); -%>
  

  <main class="flex-grow">
    <!-- Contact Header Section -->
    <section class="bg-cover bg-center h-[50vh] flex items-center justify-center" style="background-image: url('/img/contact_img.jpg');">
      <h1 class="text-gray-600 text-4xl md:text-5xl font-bold font-Lobster">Contact Us</h1>
    </section>

    <!-- Contact Form Section -->
    <section class="py-12 px-6 md:px-20">
      <div class="max-w-4xl mx-auto">
        <form action="/contact" method="POST" class="bg-white p-8 rounded-lg shadow-lg">
          <div class="mb-4">
            <label for="name" class="block text-gray-700 font-semibold mb-2">Name</label>
            <input type="text" id="name" name="name" class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-400">
          </div>

          <div class="mb-4">
            <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
            <input type="email" id="email" name="email" class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-400">
          </div>

          <div class="mb-6">
            <label for="message" class="block text-gray-700 font-semibold mb-2">Message</label>
            <textarea id="message" name="message" rows="5" class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-400"></textarea>
          </div>

          <button type="submit" class="border-2 border-slate-700 bg-slate-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-Poppins font-semibold">
            Send Message
          </button>
        </form>
      </div>
    </section>
  </main>

  <%- include('layouts/footer'); -%>

  <script src="/js/scripts.js"></script>
</body>
</html>
