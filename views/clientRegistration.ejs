<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.min.css"
    />
    <title>Client Registration Page</title>
  </head>
  <body class="bg-white p-6">
    <%- include('layouts/header'); -%> 
    <%- include('layouts/footer'); -%>

    <% if (typeof successMessage === 'string' || (errors && errors.length > 0)) { %>
    <div id="flash-messages" class="fixed top-0 left-0 right-0 mt-4 mx-auto w-11/12 z-50">
      <% if (typeof successMessage === 'string') { %>
      <div class="flash-success bg-teal-500 text-white text-center py-2 mb-4">
        <%= successMessage %>
      </div>
      <% } %>
      <% if (errors && errors.length > 0) { %>
      <div class="flash-error bg-red-500 text-white text-center py-2 mb-4">
        <% errors.forEach(function(error) { %>
        <p><%= error %></p>
        <% }); %>
      </div>
      <% } %>
    </div>
    <% } %>

    <form action="/client/register" method="POST">
      <div class="flex justify-center items-center h-screen">
        <div class="w-96 p-6 shadow-lg bg-slate-200 rounded-md">
          <h1 class="text-3xl block text-center font-Poppins font-semibold">
            <i class="fa-solid fa-user pr-2"></i> Client Registration
          </h1>
          <hr class="mt-3" />

          <div class="mt-3">
            <label for="name" class="block text-base mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Full Name..."
              required
            />
          </div>

          <div class="mt-3">
            <label for="dob" class="block text-base mb-2">Date of Birth</label>
            <input
              type="date"
              id="dob"
              name="dob"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              required
            />
          </div>

          <div class="mt-3">
            <label for="email" class="block text-base mb-2">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Email Address..."
              required
            />
          </div>

          <div class="mt-3">
            <label for="gender" class="block text-base mb-2">Gender</label>
            <select
              id="gender"
              name="gender"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              required
            >
              <option value="">Select Gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div class="mt-3">
            <label for="contact" class="block text-base mb-2">Contact Number</label>
            <input
              type="tel"
              id="contact"
              name="contact"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Contact Number..."
              required
            />
          </div>

          <div class="mt-5">
            <button
              type="submit"
              class="border-2 border-slate-700 bg-slate-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-Poppins font-semibold"
            >
              Register
            </button>
          </div>
        </div>
      </div>
    </form>

    <script src="/js/scripts.js"></script>
  </body>
</html>