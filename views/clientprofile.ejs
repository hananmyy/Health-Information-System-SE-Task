<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.min.css"
    />
    <title>Client Profile</title>
  </head>
  <body class="bg-white p-6">

    

    <div class="flex flex-col">
      <div class="place-items-center p-15">
        <div class="flex flex-row justify-center items-center shadow-lg bg-white p-6 w-200 h-120 mt-4 rounded-2xl">
          <div class="basis-1/3 p-6">
            <% if (client) { %>
                <h2><strong class="text-slate-600"><%= client.name %></strong></h2>
              <% } else { %>
                <h2 class="text-red-500">Client Not Found</h2>
            <% } %>
              
          </div>

          <div class="basis-2/3 p-8">
            <p><strong class="text-black">Date of Birth: </strong> <span><%= client.dob %></span></p>
            <p><strong class="text-black">Email: </strong> <span><%= client.email %></span></p>
            <p><strong class="text-black">Gender: </strong> <span><%= client.gender %></span></p>
            <p><strong class="text-black">Contact: </strong> <span><%= client.contact %></span></p>
            <p><strong class="text-black">Assigned Doctor: </strong> <span><%= client.doctor ? client.doctor.name : "Not Assigned" %></span></p>

            <form action="/client/:id/update" method="POST" class="mt-4">
              <input type="text" name="name" placeholder="Update Name" class="border w-full text-base px-2 py-1 mb-2" value="<%= client.name %>">
              <input type="date" name="dob" placeholder="Update DOB" class="border w-full text-base px-2 py-1 mb-2" value="<%= client.dob %>">
              <input type="email" name="email" placeholder="Update Email" class="border w-full text-base px-2 py-1 mb-2" value="<%= client.email %>">
              <input type="text" name="gender" placeholder="Update Gender" class="border w-full text-base px-2 py-1 mb-2" value="<%= client.gender %>">
              <input type="text" name="contact" placeholder="Update Contact" class="border w-full text-base px-2 py-1 mb-2" value="<%= client.contact %>">
              <button type="submit" class="border-2 border-slate-200 bg-slate-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-semibold">Update Profile</button>
            </form>

            <!-- Image upload -->
            <form action="/client/:id/uploadPicture" method="POST" enctype="multipart/form-data" class="mt-4">
              <input type="file" name="profilePicture" class="border w-full text-base px-2 py-1 mb-2 bg-gray-200">
              <button type="submit" class="bg-slate-700 text-white py-1 px-3 rounded hover:bg-slate-800 hover:text-white">Upload Picture</button>
            </form>

            <form action="/client/:id/delete" method="POST" class="mt-4">
              <button type="submit" class="bg-red-800 text-white py-1 px-3 rounded hover:bg-red-500">Delete Profile</button>
            </form>
          </div>
        </div>
      </div>

      <div class="flex flex-row justify-center items-center">
        <div class="basis-1/3 p-6">
          <div class="mt-9">
            <form action="/programs" method="GET">
              <button class="gap-4 border-2 border-slate-200 bg-slate-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-semibold">View Programs</button>
            </form>
            <form action="/clients" method="GET">
              <button class="gap-4 border-2 border-slate-200 bg-slate-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-slate-700 font-semibold">Back to Clients List</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/scripts.js"></script>
  </body>
</html>